<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_report" model="ir.ui.view">
        <field name="name">pos.payment.report.form</field>
        <field name="model">pos.payment.report</field>
        <field name="arch" type="xml">
            <form string="Payment Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="category_ids" widget="many2many_tags" />
                    <field name="show_categories" required="1"/>
                    <field name="type_report" required="1"/>
                </group>
                <group>
                    <field name="pos_config_ids" mode="tree" colspan="2" nolabel="1" />
                </group>
                <footer>
                    <button name="generate_report" string="Print" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_pos_payment_report" model="ir.actions.act_window">
        <field name="name">Payment Report</field>
        <field name="res_model">pos.payment.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem 
        id="menu_pos_payment_report" 
        name="Payment report" 
        action="l10n_ve_pos.action_pos_payment_report" 
        parent="point_of_sale.menu_point_rep" 
        sequence="4"/>
</odoo>