
<odoo>
    <record id="pos_payment_method_view_form" model="ir.ui.view">
        <field name="name">binaural.pos.payment.method.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='split_transactions']" position="after">
                <field name="is_foreign_currency" />
            </xpath>

            <xpath expr="//field[@name='receivable_account_id']" position="after">
                <field name="cross_account_journal" />
                <field name="cross_journal" />
                <field name="apply_one_cross_move" />

            </xpath>
        </field>
    </record>
</odoo>
