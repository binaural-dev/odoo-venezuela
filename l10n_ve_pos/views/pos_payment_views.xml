<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_tree" model="ir.ui.view">
        <field name="name">pos.payment.tree</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_order_id']" position="after">
                <field name="foreign_currency_id" invisible="1"/>
                <field name="foreign_rate" optional="hide" />
                <field 
                    name="foreign_amount" 
                    sum="Foreign Amount total" 
                    widget="monetary" 
                    options="{'currency_field': 'foreign_currency_id'}"
                    decoration-bf="1"/>
            </xpath>
            <xpath expr="//field[@name='amount']" position="attributes">
              <attribute name="sum">Amount total</attribute>
              <attribute name="decoration-bf">1</attribute>
              <attribute name="widget">monetary</attribute>
            </xpath>
        </field>
    </record>
</odoo>
