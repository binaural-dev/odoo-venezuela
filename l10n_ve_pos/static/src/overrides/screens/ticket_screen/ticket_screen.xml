
<templates id="template" xml:space="preserve">
    <t t-name="binaural_pos.TicketScreen" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//OrderWidget" position="attributes">
            <attribute name="conversion_rate">_selectedSyncedOrder.get_conversion_rate()</attribute>
            <attribute name="foreign_total">env.utils.formatForeignCurrency(_selectedSyncedOrder.get_foreign_total_with_tax())</attribute>
            <attribute name="quantity_products">_selectedSyncedOrder.get_qty_products()</attribute>
            <attribute name="foreign_tax">
!env.utils.floatIsZero(_selectedSyncedOrder.get_foreign_total_tax()) and env.utils.formatForeignCurrency(_selectedSyncedOrder.get_foreign_total_tax()) or ''
            </attribute>
        </xpath>
       <xpath expr="//InvoiceButton[1]" position="before">
            <FullRefundButton order="_selectedSyncedOrder" ticket_screen="this"/>
       </xpath>
    </t>
</templates>
