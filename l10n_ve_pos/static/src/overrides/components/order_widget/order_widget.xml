<templates id="template" xml:space="preserve">
    <t t-name="l10n_ve_pos.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <!-- XPath para insertar los nuevos datos dentro del div 'order-summary' -->
        <xpath expr="//div[hasclass('order-summary')]//div[@t-if='props.tax']" position="attributes">
            <attribute name="t-if">props.tax and !props.pos_tax_inside</attribute>
        </xpath>
        <xpath expr="//div[hasclass('order-summary')]" position="inside">
            <!-- Wrapper to align left and right content -->
            <div style="display: flex; justify-content: space-between; align-items: flex-start; width: 100%;text-align:left;font-size: 80%">
                <!-- Left side -->
                <div class="left-side" style="flex: 1;">
                    <div class="rate_bcv">
                        Tasa BCV: <t t-out="props.conversion_rate"/>
                    </div>
                    <div class="cant_prod">
                        Total de productos: <t t-out="props.quantity_products"/>
                    </div>
                </div>

                <!-- Divider -->
                <div class="divider" style="width: 1px; background-color: #ddd; margin: 0 10px;"></div>

                <!-- Right side -->
                <div class="right-side" style="flex: 1; text-align: right;">
                    <!-- Custom total -->
                    <div class="total">
                        Total:
                        <span t-out="props.foreign_total" class="total"/>
                    </div>
                    <div t-if="props.tax and !props.pos_tax_inside" class="fs-6 text-muted subentry">
                        Taxes: <span t-out="props.foreign_tax" class="tax"/>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
