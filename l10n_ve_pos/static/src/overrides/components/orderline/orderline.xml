<templates id="template" xml:space="preserve">
    <t t-name="l10n_ve_pos.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-price')]" position="inside">
                / <t t-out="line.foreignPrice"/>
        </xpath>

        <xpath expr="//div[hasclass('product-name')]" position="inside">
            <t t-out="line.aliquot_type"/> 
            <t  t-if="this.env.debug">
                (Tasa: <t t-out="line.foreign_currency_rate"/>)
            </t>
        </xpath>
    </t>
</templates>
