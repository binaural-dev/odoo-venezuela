<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('paymentlines-empty')]" position="inside">
            <div class="bcv">
                Tasa BCV: <t t-out="rate_bcv"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('total')]" position="inside">
            <div>
                <t t-esc="foreignTotalDueText" />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-total-due')]/span[2]" position="inside">
            <div>
                <span class="label">Foreign Total Due</span>
                <span>
                    <t t-esc="foreignTotalDueText" />
                </span>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-remaining')]/span[2]" position="after">
            <div>
                <span class="label">Foreign Remaining</span>
                <span class="amount"
                      t-att-class="{ highlight: props.order.get_due() > 0 }">
                    <t t-esc="foreignRemainingText" />
                </span>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-change')]/span[2]" position="after">
            <div>
                <span class="label">Foreign Change</span>
                <span class="amount"
                      t-att-class="{ highlight: props.order.get_change() > 0 }">
                    <t t-esc="foreignChangeText" />
                </span>
            </div>
        </xpath>
    </t>
</templates>
