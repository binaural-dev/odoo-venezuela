<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//input[@name='vat']/parent::div" position="replace">
        </xpath>
        <xpath expr="//input[@name='name']" position="replace">
            <div class="headerPartner">
                <div>
                    <select class="detail partner-name partner-main partner-min" 
                        name="prefix_vat"
                        value="V"
                        t-model="changes.prefix_vat">
                        <t t-foreach="env.pos.prefix_vats" t-as="prefix" t-key="prefix[0]">
                            <option>
                                <t t-esc="prefix[1]" />
                            </option>
                        </t>
                    </select>
                    <input class="detail partner-name partner-main partner-vat" 
                        name="vat" 
                        placeholder="Document" 
                        t-on-blur="onblur"
                        t-on-keyup="onEnter"
                        t-model="changes.vat" />
                </div>
                <input class="detail partner-name partner-main" 
                    name="name" 
                    t-ref="inputName"
                    placeholder="Name" 
                    t-model="changes.name" />
            </div>
        </xpath>
        <xpath expr="//div/div/div[@class='partner-detail'][2]" position="replace">
            <div class="partner-detail" >
                <span class="label">City</span>
                <select class="detail" name="cities" t-model="changes.city_id" t-on-change="captureChange">
                    <option value="">None</option>
                    <t t-foreach="env.pos.cities" t-as="city" t-key="city.id">
                        <option t-att-value="city.id" t-att-selected="city.name == changes.city">
                            <t t-esc="city.name" />
                        </option>
                    </t>
                </select>
            </div>
        </xpath>
    </t>
</templates>
