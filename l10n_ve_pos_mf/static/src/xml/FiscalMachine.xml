<templates id="template" xml:space="preserve">
    <t t-name="binaural_pos_mf.FiscalMachinePopup">
                <div class="popup-container">
            <div class="popup-header drag-handle">
                <h3><i class="fas fa-chart-bar me-2"></i>Reportes Financieros</h3>
            </div>
            
            <div class="popup-body">
                <div class="report-grid">
                    <div class="report-btn" t-on-click="report_z">
                        <i class="fas fa-file-invoice-dollar"></i>
                        Reporte Z
                    </div>
                    <div class="report-btn active" t-on-click="report_x">
                        <i class="fas fa-chart-pie"></i>
                        Reporte X
                    </div>
                </div>
                
                <div class="report-btn" style="margin-top: 15px;">
                    <i class="fas fa-file-export"></i>
                    Exportar a PDF
                </div>
            </div>
            
            <div class="popup-footer">
                <button class="btn-confirm" t-on-click="confirm">
                    <i class="fas fa-check-circle me-2"></i>Confirmar
                </button>
                <button class="btn-cancel" t-on-click="cancel">
                    <i class="fas fa-times-circle me-2"></i>Cancelar
                </button>
            </div>
        </div>
    </t>
</templates>
