<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//CashierName" position="after">
            <div t-if="this.env.pos.useFiscalMachine()" t-on-click="_on_click_mf_test" name="fiscal_machine">
                <i class="fa fa-fw fa-print" role="img"></i>
                <p> Maquina Fiscal</p>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('pos-branding')]" position="inside">
            <div t-if="access_button_mf" class="cash-move-button" t-on-click="showFiscalMachinePopup">
                <i class="fa fa-fw fa-print" role="img"></i>
                <p>Reporte Maquina Fiscal</p>
            </div>
        </xpath>
    </t>
</templates>
