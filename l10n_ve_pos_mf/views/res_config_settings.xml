<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_mf</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='content-group pos_iot_config']/div[@class='row'][2]"
                position="after">
                <div class="row">
                    <label string="Fiscal Data Module" for="iface_fiscal_data_module"
                        class="col-lg-4 o_light_label" />
                    <field name="iface_fiscal_data_module" />
                </div>
            </xpath>
            <xpath expr="//div[@class='row'][1]/label[@for='pos_iface_printer_id']"
                position="replace">
            </xpath>
            <xpath expr="//div[@class='row'][1]/field[@name='pos_iface_printer_id']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_l10n_ve_pos" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_mf</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ve_pos.res_config_settings_l10n_ve_pos" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='binaural_igtf_settings']">
                <div class="col-12 col-lg-6 o_setting_box" id="mf_setting">
                    <div class="o_setting_left_pane">
                        <field name="pos_access_button_mf" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_access_button_mf" />
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box"
                    id="message_in_head">
                    <div class="o_setting_left_pane">
                        <field name="message_in_head" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="message_in_head" />
                        <div class="text-muted">
                            message in head
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
