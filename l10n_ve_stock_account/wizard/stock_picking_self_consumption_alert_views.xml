<odoo>
    <record id="view_stock_picking_self_consumption_wizard" model="ir.ui.view">
        <field name="name">stock.picking.self.consumption.wizard.form</field>
        <field name="model">stock.picking.self.consumption.wizard</field>
        <field name="arch" type="xml">
            <form string="Self-Consumption Validation">
                <group>
                    <div class="o_form_label">Alert</div>
                    <p> Validating this operation with the reason <b>SELF CONSUMPTION</b> will reflect it in the inventory book under the self consumption column. </p>
                </group>
                <footer>
                    <button name="action_confirm" string="Accept" type="object" class="oe_highlight" />
                    <button name="action_cancel" string="Cancel" type="object" class="oe_secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
