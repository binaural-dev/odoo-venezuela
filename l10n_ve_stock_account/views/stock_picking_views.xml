<odoo>
    <!-- ### TREE VIEWS ### -->
    <record id="stock_vpicktree_l10n_ve_stock_account" model="ir.ui.view">
        <field name="name">stock.vpicktree.l10n_ve_stock_account</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="guide_number" optional="hide"/>
            </xpath>
        </field>
    </record>
    <!-- ### FORM VIEWS ### -->
    <record id="stock_picking_form_view_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.view.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="order_is_consignment" invisible="1"/> 
            </xpath>
            <xpath expr="//form//group//group//field[@name='location_id'][2]" position="attributes">
                <attribute name="readonly">order_is_consignment or state== 'done'</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="partner_required" invisible='1'/>
            </xpath>
            <xpath expr="//form//group//group//field[@name='partner_id']" position="attributes">
                <attribute name="required">partner_required</attribute> 
                <attribute name="readonly">order_is_consignment or partner_required</attribute>
            </xpath>
            <xpath expr="//form//header" position="inside">
                <field name="dispatch_guide_controls" invisible="1" />
                <button 
                    name="print_dispatch_guide" string="Guide Dispatch"
                    type="object" class="o_btn_validate"
                    invisible="not dispatch_guide_controls"
                    data-hotkey="m"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="is_consignment" invisible="1" />

                <field name="optional_internal_movement_guidance" invisible="1"/>
                <field name="reasons_optional_guide_dispatch" invisible="1"/>
                <field name="transfer_reason_id" invisible="1" />
                <field 
                    name="is_dispatch_guide"
                    invisible="operation_code not in ['internal','outgoing']" force_save="1"
                    readonly="not reasons_optional_guide_dispatch or state == 'done'"/>


                <field name="is_consignment_readonly" invisible="1"/>
                <field 
                    name="transfer_reason_id"
                    invisible="operation_code != 'internal'"
                    readonly="state == 'done' or is_consignment_readonly"
                    required="operation_code == 'internal'" />
                <field name="other_causes_transfer_reason" invisible="1"/>
                <field name="show_other_causes_transfer_reason" invisible="1"/>
                <field name="is_consignment" />
                <field name="allowed_reason_ids" invisible="1" />
                <field name="is_donation" invisible="1" />
                <field 
                    name="transfer_reason_id"
                    invisible="operation_code != 'outgoing'"
                    readonly="is_donation or state == 'done'"/>
                <field
                    name="other_causes_transfer_reason"
                    invisible="not show_other_causes_transfer_reason"
                    readonly="state == 'done' or is_consignment_readonly"
                    required="operation_code == 'outgoing' and show_other_causes_transfer_reason" />
                <field name="allowed_reason_ids" invisible="1" />
                <field name="is_donation" invisible="1" />
                <field name="dispatch_guide_controls" invisible="1" />
                <field 
                    name="guide_number"
                    readonly="1"
                    invisible="not dispatch_guide_controls"/>
            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="operation_code" invisible="1"/>
                <field name="is_return" invisible="1"/>
                <field name="show_create_invoice" invisible="1"/>
                <field name="show_create_bill" invisible="1"/>
                <field name="show_create_customer_credit" invisible="1"/>
                <field name="show_create_vendor_credit" invisible="1"/>
                <field name="show_create_invoice_internal" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_picking_invoice" type="object"
                            class="oe_stat_button" icon="fa-file-text"
                            invisible="invoice_count == 0">
                    <field name="invoice_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button 
                    name="create_invoice" class="oe_highlight"
                    string="Create Invoice" type="object"
                    groups="l10n_ve_stock_account.group_stock_account"
                    invisible="not show_create_invoice"/>
                <button 
                    name="create_bill" class="oe_highlight"
                    string="Create Bill" type="object"
                    groups="l10n_ve_stock_account.group_stock_account"
                    invisible="not show_create_bill"/>
                <button 
                    name="create_customer_credit" class="oe_highlight"
                    string="Create Credit Note" type="object"
                    invisible="not show_create_customer_credit"/>
                <button 
                    name="create_vendor_credit" class="oe_highlight"
                    string="Create Vendor Credit" type="object"
                    invisible="not show_create_vendor_credit"/>
            </xpath>
        </field>
    </record>

    <record id="stock_view_picking_form" model="ir.ui.view">
        <field name="name">stock.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="l10n_ve_stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='button_validate'][1]" position="attributes">
                
                <attribute name="invisible">True</attribute>

            </xpath>

            <xpath expr="//button[@name='button_validate'][2]" position="attributes">

                <attribute name="invisible">True</attribute>


            </xpath>

            <xpath expr="//button[@name='button_validate'][2]" position="after">
                <field name="is_dispatch_guide" invisible="1"/>
                <button name="button_validate" string="Validate" type="object" class="oe_highlight" groups="!l10n_ve_stock.group_hide_validate_inventory_transfers_button" data-hotkey="v" invisible="state in ('draft', 'confirmed', 'done', 'cancel') or not is_dispatch_guide" confirm="Upon confirmation, the system will generate the number of sequences of shipping guides."/>
                <button name="button_validate" string="Validate" type="object" class="oe_highlight" groups="!l10n_ve_stock.group_hide_validate_inventory_transfers_button" data-hotkey="v" invisible="state in ('draft', 'confirmed', 'done', 'cancel') or  is_dispatch_guide" />

                <button name="button_validate" string="Validate" type="object" groups="!l10n_ve_stock.group_hide_validate_inventory_transfers_button" class="o_btn_validate" data-hotkey="v" invisible="state in ('waiting', 'assigned', 'done', 'cancel') or not is_dispatch_guide" confirm="Upon confirmation, the system will generate the number of sequences of shipping guides."/>
                <button name="button_validate" string="Validate" type="object" groups="!l10n_ve_stock.group_hide_validate_inventory_transfers_button" class="o_btn_validate" data-hotkey="v" invisible="state in ('waiting', 'assigned', 'done', 'cancel') or is_dispatch_guide" />


            </xpath>

           
        </field>

    </record>
    <!-- ### ACTIONS SERVERS ### -->
    <record id="action_create_invoice_for_multi_transfer" model="ir.actions.server">
        <field name="name">Create Invoice/Bill</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_create_multi_invoice_for_multi_transfer()
        </field>
    </record>
</odoo>
