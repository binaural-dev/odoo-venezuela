<odoo>
    <record id="res_config_settings_view_form_l10n_ve_stock_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n.ve.stock.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ve_stock.res_config_settings_view_form_l10n_ve_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='l10n_ve_stock_settings']" position="inside">
                <div class="col-5 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <group colspan="4" col="4">
                            <field name="date_type_of_month" class="oe_inline" required="1"/>
                            <div class="text-muted">Define el tipo de mes para crear las facturas.</div>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>