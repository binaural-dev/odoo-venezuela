<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ve_stock_account_view_stock_location_form" model="ir.ui.view">
        <field name="name">l10n.ve.stock.account.view.stock.location.form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2" position="after">
                <label for="partner_id"/>
                <h2>
                    <field name="partner_id" placeholder="Partner" options="{'no_create': True}"/>
                </h2>
            </xpath>
        </field>
    </record>
    <record id="l10n_ve_stock_account_view_stock_location_tree" model="ir.ui.view">
        <field name="name">l10n.ve.stock.account.view.stock.location.tree</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='complete_name']" position="after">
                <field name="partner_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>