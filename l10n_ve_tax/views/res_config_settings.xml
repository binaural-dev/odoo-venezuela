<odoo>
    <data>
        <record id="view_res_config_settings_l10n_ve_taxes" model="ir.ui.view">
            <field name="name">res.config.settings.l10n.ve.taxes</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_ve_base.l10n_ve_base_view_res_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='l10n_ve_base']" position="inside">
                    <block title="Configuration Taxes: IGTF" name="igtf_config_block" >
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_config_igtf_unique_tax">
                            <div class="o_setting_right_pane">
                                <separator string="Core Settings"/>
                                <group>
                                    <field name="unique_tax" string="Unique Tax Enforcement"/>
                                </group>
                                <div class="text-muted">
                                    Tax is mandatory on order and invoice lines, only one tax allowed
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_config_igtf_show_discount_on_moves">
                            <div class="o_setting_right_pane">
                                <separator string="Display Options"/>
                                <group>
                                    <field name="show_discount_on_moves" string="Show Discount Column"/>
                                </group>
                                <div class="text-muted">
                                    Enable discount column visibility on invoice lines
                                </div>
                            </div>
                        </div>
                    </block>
                    <block title="Configuration Taxes: Taxes Sales/Purchase" name="tax_config_block">
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_tax_rates_sales">
                            <div class="o_setting_right_pane">
                                <separator string="Sales Tax Rates"/>
                                <group>
                                    <field name="exent_aliquot_sale" string="Exempt Aliquot"/>
                                    <field name="general_aliquot_sale" string="General Aliquot"/>
                                    <field name="reduced_aliquot_sale" string="Reduced Aliquot"/>
                                    <field name="extend_aliquot_sale" string="Extended Aliquot"/>
                                </group>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_tax_rates_purchase">
                            <div class="o_setting_right_pane">
                                <separator string="Purchase Tax Rates"/>
                                <group>
                                    <field name="exent_aliquot_purchase" string="Exempt Aliquot"/>
                                    <field name="general_aliquot_purchase" string="General Aliquot"/>
                                    <field name="reduced_aliquot_purchase" string="Reduced Aliquot"/>
                                    <field name="extend_aliquot_purchase" string="Extended Aliquot"/>
                                </group>
                            </div>
                        </div>
                    </block>
                    <block title="Configuration Taxes: Non-Deductible " name="non_deductible_block" >
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_deductibility">
                            <div class="o_setting_right_pane">
                                <separator string="Deductibility"/>
                                <group>
                                    <field name="config_deductible_tax" string="Enable Non-Deductible Taxes"/>
                                </group>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" invisible="not config_deductible_tax" id="l10n_ve_tax_div_non_deductible_rates">
                            <div class="o_setting_right_pane">
                                <separator string="Non-Deductible Rates" />
                                <group>
                                    <field name="no_deductible_general_aliquot_purchase" string="General Aliquot"/>
                                    <field name="no_deductible_reduced_aliquot_purchase" string="Reduced Aliquot"/>
                                    <field name="no_deductible_extend_aliquot_purchase" string="Extended Aliquot"/>
                                </group>
                            </div>
                        </div>
                    </block>
                    <block title="Configuration: Accountant Books" name="book_config_block">
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_sales_book">
                            <div class="o_setting_right_pane">
                                <separator string="Sales Book" />
                                <group>
                                    <field name="not_show_reduced_aliquot_sale" string="Hide Reduced Aliquot"/>
                                    <field name="not_show_extend_aliquot_sale" string="Hide Extended Aliquot"/>
                                </group>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_tax_div_purchase_book">
                            <div class="o_setting_right_pane">
                                <separator string="Purchase Book" />
                                <group>
                                    <field name="not_show_reduced_aliquot_purchase" string="Hide Reduced Aliquot"/>
                                    <field name="not_show_extend_aliquot_purchase" string="Hide Extended Aliquot"/>
                                </group>
                            </div>
                        </div>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>