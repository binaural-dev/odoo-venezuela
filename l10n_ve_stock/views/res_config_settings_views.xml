<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_l10n_ve_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n.ve.stock</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="l10n_ve_rate.res_config_settings_l10n_ve_rate"/>
        <field name="arch" type="xml">
	        <xpath expr="//div[@name='l10n_ve_rate_settings']" position="after">
                <h2>Stock Settings</h2>
                <div class="row mt16 o_settings_container" name="l10n_ve_stock_settings">
                    <div class="col-5 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_product_available_quantity_on_sale" class="oe_inline" required="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_product_available_quantity_on_sale" />
                            <div class="text-muted">Allows to show the available quantity (Total minus reserved) in both product template and variant of it.</div>
                        </div>
                    </div>

                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_main_warehouse"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_main_warehouse"/>
                            <div class="text-muted">
                                Define a main sell's warehouse.
                            </div>
                            <div class="content-group">
                                <div class="mt16" attrs="{'invisible': [('use_main_warehouse', '=', False)]}">
                                    <field name="main_warehouse_id" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" name="l10n_ve_settings_stock_quantity">
                        <div class="o_setting_left_pane">
                            <field name="use_free_qty_odoo" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_free_qty_odoo"/>
                            <div class="text-muted">
                                <strong>When marked:</strong> On the product sheet Take into account all the the locations to calculate Available Quantities<br/>
                                <strong>When unchecked:</strong> The quantity of products will be filtered ('Available quantity') by parent and child locations that are only of Type 'Stock'
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" name="l10n_ve_settings_stock_weight">
                        <div class="o_setting_left_pane">
                            <field name="change_weight" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="change_weight"/>
                            <div class="text-muted">
                                Allow changing weight during picking
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box"
                        name="validate_without_product_quantity_l10n_ve">
                        <div class="o_setting_left_pane">
                            <field name="validate_without_product_quantity" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="validate_without_product_quantity" />
                            <div class="text-muted">
                                If you have more than the quantity on stock dont allow
                                transfer/sell.
                            </div>
                        </div>
                    </div>

                </div>
                
            </xpath>
        </field>
    </record>
</odoo>
