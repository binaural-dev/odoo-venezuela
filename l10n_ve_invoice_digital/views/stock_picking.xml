<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="show_digital_dispatch_guide" invisible="1"/>
                <button name="generate_document_digtal" string="Generate Digital Dispatch Guide" type="object" 
                    context="{'document_type': '04'}" 
                    invisible="show_digital_dispatch_guide"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_digitalized" string="Digitized" invisible="not dispatch_guide_controls" readonly="True"/>
                <field name="control_number_tfhka" string="Control Number" invisible="not dispatch_guide_controls" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>