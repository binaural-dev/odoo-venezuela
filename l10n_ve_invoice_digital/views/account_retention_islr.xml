<odoo>
    <data>
        <record id="view_retention_islr_form_l10n_ve_payment_extension_inherit" model="ir.ui.view">
            <field name="name">account retention from inherit</field>
            <field name="model">account.retention</field>
            <field name="inherit_id" ref="l10n_ve_payment_extension.view_retention_islr_form_l10n_ve_payment_extension" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="show_digital_retention_islr" invisible="1"/>
                    <field name="control_number_tfhka" invisible="1"/>
                    <button name="generate_document_digital" string="Generate Digital Retention" type="object" 
                            context="{'document_type': '06'}" 
                            invisible="show_digital_retention_islr"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="before">
                    <field name="is_digitalized" string="Digitized" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='number']" position="after">
                    <field name="control_number_tfhka" string="Control Number" readonly="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>