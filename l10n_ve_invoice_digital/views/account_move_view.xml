<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="invisible">not show_reset_to_draft_button or is_digitalized</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="show_digital_invoice" invisible="1"/>
                <field name="show_digital_credit_note" invisible="1"/>
                <field name="show_digital_debit_note" invisible="1"/>
                <button name="emit_document" string="Generate Digital Invoice" type="object" 
                    context="{'document_type': '01'}" 
                    invisible="show_digital_invoice"/>
                <button name="emit_document" string="Generate Digital Credit Note" type="object" 
                    context="{'document_type': '02'}" 
                    invisible="show_digital_credit_note"/>
                <button name="emit_document" string="Generate Digital Debit Note" type="object" 
                    context="{'document_type': '03'}" 
                    invisible="show_digital_debit_note"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']/label[1]" position="before">
                <field name="is_digitalized" string="Digitized" invisible="move_type == 'entry'" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>