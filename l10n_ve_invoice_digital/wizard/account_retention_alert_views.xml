<odoo>
    <record id="account_retention_alert_wizard" model="ir.ui.view">
        <field name="name">account.retention.alert.wizard.form</field>
        <field name="model">account.retention.alert.wizard</field>
        <field name="arch" type="xml">
            <form string="Validation">
                <group>
                    <field name="message" readonly="1" nolabel="1" style="width: 610px;"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Accept" type="object" class="oe_highlight" />
                    <button name="action_cancel" string="Cancel" type="object" class="oe_secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
