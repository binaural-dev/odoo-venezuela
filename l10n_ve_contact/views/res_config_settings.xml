<odoo>
    <record id="res_config_settings_l10n_ve_contact" model="ir.ui.view">
        <field name="name">res.config.settings.l10n.ve.contact</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <block title="Configuration Contact: General" string="Contact Configuration" name="l10n_ve_contact_block">
                    <div id="l10n_ve_contact_div_validate_user_by_company" class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="validate_user_creation_by_company" readonly="False"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="validate_user_creation_by_company" string="Validate the creation of contacts by company"/>
                            <div class="text-muted">
                                <span class="o_text-muted">Avoid creating repeated contacts in each company using the document number field</span>
                            </div>
                        </div>
                    </div>
                    <div id="l10n_ve_contact_div_validate_user_general" class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="validate_user_creation_general" readonly="False"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="validate_user_creation_general" string="Validate contact creation in the entire database"/>
                            <div class="text-muted">
                                <span class="o_text-muted"> Avoid creating repeated contacts in the database using the document number fieldesta</span>
                            </div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>