<odoo>
    <record id="move_action_post_alert_wizard" model="ir.ui.view">
        <field name="name">move.action.post.alert.wizard.form</field>
        <field name="model">move.action.post.alert.wizard</field>
        <field name="arch" type="xml">
            <form string="Validation">
                <group>
                    <span class="o_form_label" style="font-size: 14px; white-space: nowrap;">
                        Once confirmed, the system will generate the sequences and the document cannot be edited later. 
                    </span>
                </group>
                <footer>
                    <button name="action_confirm" string="Accept" type="object" class="oe_highlight" />
                    <button name="action_cancel" string="Cancel" type="object" class="oe_secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
