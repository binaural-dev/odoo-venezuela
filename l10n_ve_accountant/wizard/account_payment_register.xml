<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form_l10n_ve_invoice" model="ir.ui.view">
        <field name="name">view.account.payment.register.form.binaural.invoice</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']" position="inside">
                <label for="foreign_rate" />
                <div name="foreign_currency_div" class="o_row">
                    <field name="foreign_currency_id" options="{'no_create': True, 'no_open': True}" required="1" />
                    <field name="foreign_rate" />
                </div>
                <field name="foreign_inverse_rate" invisible="1"/>
                <label for="foreign_inverse_rate" attrs="{'invisible': [('base_currency_is_vef', '=', True)]}"/>
                <div name="foreign_currency_div" class="o_row">
                    <field name="base_currency_is_vef" invisible="1"/>
                    <field name="foreign_inverse_rate" attrs="{'invisible': [('base_currency_is_vef', '=', True)]}" groups="base.group_no_one" readonly="1"/>
		        </div>
            </xpath>
        </field>
    </record>

</odoo>
