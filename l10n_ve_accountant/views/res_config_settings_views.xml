<odoo>
    <record id="res_config_settings_view_inherit_l10n_ve_accountant" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit.l10n.ve.accountant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='show_sale_receipts']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//setting[@id='show_purchase_receipts']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>