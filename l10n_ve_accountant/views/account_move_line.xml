<odoo>
    <record id="view_account_move_line_form_l10n_ve_invoice" model="ir.ui.view">
        <field name="name">view.account.move.line.form.l10n.ve.invoice</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
	    <xpath expr="//notebook/page/group/group[1]" position="after">
		<group string="Foreign Amount">
		    <field name="foreign_rate" readonly="1"/>
            <field name="foreign_inverse_rate" invisible="1"/>
		    <field name="foreign_inverse_rate" readonly="1" groups="base.group_no_one"/>
		    <field name="foreign_debit" readonly="1"/>
		    <field name="foreign_debit_adjustment"/>
		    <field name="foreign_credit_adjustment"/>
		    <field name="foreign_credit" readonly="1"/>
		    <field name="foreign_balance" readonly="1"/>
                </group>
	    </xpath>
	</field>
   </record>

   <record id="view_move_line_tree" model="ir.ui.view">
	<field name="name">view.move.line.tree.l10n.ve.accountant</field>
	<field name="model">account.move.line</field>
	<field name="inherit_id" ref="account.view_move_line_tree"/>
	<field name="arch" type="xml">
	    <xpath expr="//field[@name='balance']" position="after">
		<field name="foreign_debit" readonly="1" optional="show" sum="Total Foreign Debit"/>
		<field name="foreign_debit_adjustment" optional="hide"/>
		<field name="foreign_credit" readonly="1" optional="show" sum="Total Foreign Credit"/>
		<field name="foreign_credit_adjustment" optional="hide" />
		<field name="foreign_balance" readonly="1" optional="hide"/>
	    </xpath>
        </field>
    </record>
</odoo>
