<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_l10n_ve_accountant" model="ir.ui.view">
        <field name="name">view.account.move.form.l10n.ve.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <field name="foreign_balance" invisible="1"/>
                <div class="alert alert-warning mb-0" role="alert" attrs="{'invisible': [('foreign_balance', '=', 0)]}">
                Warning: This account move has a foreign balance of
                    <field name="foreign_balance"/>.
                </div>
            </xpath>
            <xpath expr="//header" position="after">
                <field name="is_reset_to_draft_for_price_change" invisible="1"/>
                <div class="alert alert-warning mb-0" role="alert" attrs="{'invisible': [('is_reset_to_draft_for_price_change', '=', False)]}">
                    <b>Warning: This invoice has been reset to draft.</b>
                    Please note that you
                    <b>should not modify the prices of the invoice lines</b>, 
                    as this will prevent the
                    <b>“Reset to Draft”</b> button from being available again.
                    When
                    <b>inventory valuation is active</b>, modifying a confirmed invoice, changing the prices, 
                    and reconfirming it may result in an incorrect inventory valuation. 
                    This restriction avoids inconsistencies by preventing the creation of erroneous 
                    adjustment layers during repeated edits.
                </div>
            </xpath>
            <xpath expr="//header/button[@name='button_cancel']" position="after">
                <button name="action_update_account_id" string="Update account lines" type="object"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id" nolabel="1" context="{'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False, 'show_address': 1, 'default_is_company': True}" domain="[('type', '!=', 'private'), ('company_id', 'in', (False, company_id))]" options="{&quot;always_reload&quot;: True, &quot;no_quick_create&quot;: True}" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                <field name="manually_set_rate" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vat" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Foreign currency" name="foreign_currency">
                    <group>
                        <group>
                            <field name="foreign_currency_id" invisible='1'/>
                            <field
                                name="foreign_inverse_rate"
                                invisible="1"
                                string="Foreign inverse rate"
                                readonly="1"
                            />
                            <field name="foreign_inverse_rate" groups="base.group_no_one" readonly="1"/>
                            <field name="foreign_rate" readonly="1"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right"
                            attrs="{'invisible': ['|', ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')), ('payment_state' ,'=', 'invoicing_legacy')]}">
                            <field name="tax_totals" 
                                widget="account-tax-foreign-totals-field" 
                                nolabel="1" 
                                colspan="2"
                                attrs="{'readonly': ['|', ('state', '!=', 'draft'), '&amp;', ('move_type', 'not in', ('in_invoice', 'in_refund')), ('quick_edit_mode', '=', False)]}"/>
                            <field name="invoice_payments_widget" colspan="2" nolabel="1" widget="payment"/>
                            <field name="invoice_outstanding_credits_debits_widget"
                                class="oe_invoice_outstanding_credits_debits"
                                colspan="2" nolabel="1" widget="payment"
                                attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="foreign_price"/>
            </xpath>
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="after">
                <field name="foreign_currency_id" invisible='1'/>
                <field name="foreign_subtotal"
                    />
                <field name="foreign_price_total"
                       groups="account.group_show_line_subtotals_tax_included"/>
                <field name="foreign_rate" optional="hide"/>
                <field
		    name="foreign_inverse_rate"
		    groups="base.group_no_one"
		    string="Foreign inverse rate"
		    optional="hide"
		    readonly="1"
		/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//page/field[@name='line_ids']/tree/field[@name='balance']" position="after">
                <field name="foreign_currency_id" invisible='1'/>
                <field
		    name="foreign_debit"
		    optional="show"
		    sum="Total Foreign Debit"
		    readonly="1"
		/>
                <field
		    name="foreign_credit"
		    optional="show"
		    sum="Total Foreign Credit"
		    readonly="1"
		/>
                <field name="foreign_debit_adjustment" optional="hide"/>
                <field name="foreign_credit_adjustment" optional="hide"/>
                <field name="foreign_balance" optional="hide" groups="base.group_no_one"/>
                <field name="foreign_rate" optional="hide" groups="base.group_no_one"/>
                <field
		    name="foreign_inverse_rate"
		    groups="base.group_no_one"
		    optional="hide"
		    readonly="1"
		/>
            </xpath>
            <field name="payment_reference" position="after">
                <field name="financial_document" attrs="{'invisible':[('move_type','not in',['out_refund','out_invoice'])]}" />
            </field>
            <xpath expr="//page[@name='other_info']//field[@name='ref']" position="attributes">
                <attribute name="attrs">{'readonly': [('move_type', 'in', ['out_refund'])]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="foreign_currency_id" invisible="1"/>
                <field 
                    name="foreign_total_billed" 
                    sum="Foreign Amount total" 
                    widget="monetary" 
                    options="{'currency_field': 'foreign_currency_id'}"
                    decoration-bf="1"
                    optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>