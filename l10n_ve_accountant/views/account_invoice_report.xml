
<odoo>

    <data>

        <record id="view_account_invoice_report_pivot_l10n_ve_invoice" model="ir.ui.view">
            <field name="name">view.account.invoice.report.pivot.l10n.ve.invoice</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_pivot"/>
            <field name="arch" type="xml">
		        <pivot position="inside">
                    <field name="foreign_subtotal" />
                    <field name="foreign_rate" />
                    <field name="foreign_price_total" />
                </pivot>
            </field>
        </record>

        <record id="view_account_invoice_report_graph_l10n_ve_invoice" model="ir.ui.view">
            <field name="name">view.account.invoice.report.pivot.l10n.ve.invoice</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_graph"/>
            <field name="arch" type="xml">
                <graph position="inside">
                    <field name="foreign_subtotal" />
                    <field name="foreign_rate" />
                    <field name="foreign_price_total" />
                </graph>
            </field>
        </record>

        <record id="view_account_invoice_report_search_l10n_ve_invoice" model="ir.ui.view">
            <field name="name">view.account.invoice.report.pivot.l10n.ve.invoice</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
            <field name="arch" type="xml">
                <search position="inside">
                    <field name="foreign_subtotal" />
                    <field name="foreign_rate" />
                    <field name="foreign_price_total" />
                </search>
                <group position="inside">
                    <filter name="foreign_subtotal" string="Foreign Total Billed" domain="[]" context="{'group_by':'foreign_subtotal'}"/>
                    <filter name="foreign_rate" string="Foreign Rate" domain="[]" context="{'group_by':'foreign_rate'}"/>
                    <field name="foreign_price_total" string="Foreign price total" />
                </group>

            </field>

        </record>
    </data>
    

</odoo>
