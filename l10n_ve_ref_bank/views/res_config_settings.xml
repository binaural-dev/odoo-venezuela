<odoo>
    <record id="res_config_settings_l10n_ve_ref_bank" model="ir.ui.view">
        <field name="name">res.config.settings.l10n.ve.ref.bank</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <block title="Bank Reference" name="l10n_ve_ref_bank_block">
                    <div class="col-6 col-lg-6 o_setting_box" id="l10n_ve_ref_bank_ref_required">
                        <div class="o_setting_left_pane">
                            <field name="ref_required"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="ref_required">Tax Period</label>
                            <div class="text-muted">Activate the validation of Bank references</div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>