<odoo>
    <record id="pos_config_view_form_inherit_pos_igtf" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.igtf</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/div[@id='other_devices']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="apply_igtf">
                    <div class="o_setting_left_pane">
                        <field name="apply_igtf"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="apply_igtf" string="Apply IGTF"/>
                        <div class="text-muted mb16">
                            Calculate IGTF with payments made in USD on current box
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>