<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('total')]" position="replace">
            <div style="font-size:35px;" class="d-flex w-100 justify-content-center py-2 text-success">
                <t t-if="!this.props.order.is_to_receipt() and this.pos.config.apply_igtf">
                    <span>
                        <t t-esc="totalDueText" /> 
                    </span>
                    <span style="font-size:15px;">(TOTAL)</span>
                    <span class="ms-2 me-2">
                    +
                    </span>
                    <span>
                        <t t-esc="amountIGTF" />
                    </span>
                    <span class="me-1" style="font-size:15px;">
                        (IGTF) <br/>
                    </span>
                    <span class="ms-2 me-2">
                    =
                    </span>
                    <t t-esc="totalDueTextWithIGTF" />
                </t>
                <t t-else="">
                    <t t-esc="totalDueText" />
                </t>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-change')]" position="after">
            <div t-if="!this.props.order.is_to_receipt() and this.pos.config.apply_igtf" class="payment-status-total-change py-2 fs-3">
                <span class="label pe-2">BI IGTF</span>
                <span class="amount" t-esc="biAmount"/>
                <br/>
                <span class="label pe-2">IGTF:</span>
                <span class="amount" t-esc="igtfAmount"/>
                <br/>
                <span class="label pe-2">Foreign IGTF:</span>
                <span class="amount" t-esc="igtfForeignAmount"/>
            </div>
        </xpath>
    </t>
</templates>
