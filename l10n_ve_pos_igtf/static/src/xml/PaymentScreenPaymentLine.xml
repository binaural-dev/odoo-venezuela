<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='line.selected']/div/div[hasclass('payment-name')]" position="inside">
            <div class="payment-name">
                <t t-if="line.include_igtf">
                    <span style="border: 1px solid #272727;padding: 2px 6px;border-radius: 5px">IGTF = <t t-out="formatIgtfAmount(line)"/></span>
                </t>
            </div>
        </xpath>
        <xpath expr="//t[@t-else='']/div/div[hasclass('payment-name')]" position="inside">
            <div class="payment-name">
                <t t-if="line.include_igtf">
                    <span style="border: 1px solid #272727;padding: 2px 6px;border-radius: 5px">IGTF = <t t-out="formatIgtfAmount(line)"/></span>
                </t>
            </div>
        </xpath>
     </t>
 </templates>

