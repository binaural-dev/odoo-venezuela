<odoo>
    <record id="financial_situation_statement" model="account.report">
        <field name="name">Financial situation statement</field>
        <field name="filter_analytic_groupby" eval="True" />
        <field name="filter_unfold_all" eval="True" />
        <field name="filter_journals" eval="True" />
        <field name="filter_hierarchy">by_default</field>
        <field name="filter_multi_company">selector</field>
        <field name="default_opening_date_filter">this_year</field>
        <field name="column_ids">
            <record id="financial_situation_statement_column" model="account.report.column">
                <field name="name">Balance</field>
                <field name="expression_label">balance</field>
            </record>
        </field>
        <field name="line_ids">
            <record id="account_financial_report_assets_financial_situation_statement"
                model="account.report.line">
                <field name="name">ASSETS</field>
                <field name="code">TAFS</field>
                <field name="groupby">account_id</field>
                <field name="foldable" eval="True" />
                <field name="expression_ids">
                    <record
                        id="account_financial_report_assets_balance_financial_situation_statement"
                        model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">domain</field>
                        <field
                            name="formula"
                            eval="[(
				'account_id.account_type',
				'in',
				('asset_receivable', 'asset_cash', 'asset_current', 'asset_non_current', 'asset_prepayments', 'asset_fixed')
			    )]"
                        />
                        <field name="date_scope">normal</field>
                        <field name="subformula">sum</field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_liability_financial_situation_statement"
                model="account.report.line">
                <field name="name">LIABILITIES</field>
                <field name="code">LFS</field>
                <field name="groupby">account_id</field>
                <field name="foldable" eval="True" />
                <field name="expression_ids">
                    <record
                        id="account_financial_report_liability_balance_financial_situation_statement"
                        model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">domain</field>
                        <field
                            name="formula"
                            eval="[(
				'account_id.account_type',
				'in',
				('liability_payable', 'liability_credit_card', 'liability_current', 'liability_non_current')
			    )]"
                        />
                        <field name="date_scope">normal</field>
                        <field name="subformula">sum</field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_equity_financial_situation_statement"
                model="account.report.line">
                <field name="name">EQUITY</field>
                <field name="code">EQFS</field>
                <field name="groupby">account_id</field>
                <field name="foldable" eval="True" />
                <field name="expression_ids">
                    <record
                        id="account_financial_report_equity_balance_financial_situation_statement"
                        model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">domain</field>
                        <field
                            name="formula"
                            eval="[(
				'account_id.account_type',
				'in',
				('equity', 'equity_unaffected')
			    )]"
                        />
                        <field name="date_scope">normal</field>
                        <field name="subformula">sum</field>
                    </record>
                </field>
            </record>
            <record
                id="account_financial_report_asset_minus_liability_plus_equity_financial_situation_statement"
                model="account.report.line">
                <field name="name">ASSETS - (LIABILITY + EQUITY)</field>
                <field name="code">TALEQFS</field>
                <field name="expression_ids">
                    <record
                        id="account_financial_report_asset_minus_liability_plus_equity_balance_financial_situation_statement"
                        model="account.report.expression">
                        <field name="label">balance</field>
                        <field name="engine">aggregation</field>
                        <field name="formula">TAFS.balance - (LFS.balance + EQFS.balance)</field>
                        <field name="date_scope">normal</field>
                    </record>
                </field>
            </record>
        </field>
    </record>
</odoo>
