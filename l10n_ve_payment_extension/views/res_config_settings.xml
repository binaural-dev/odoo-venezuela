<odoo>
    <data>
        <record id="res_config_settings_l10n_ve_payment_extension" model="ir.ui.view">
            <field name="name">res.config.settings.l10n.ve.payment.extension</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_ve_base.l10n_ve_base_view_res_config_settings" />
            <field name="arch" type="xml">
                <xpath expr="//app[@name='l10n_ve_base']" position="inside">
                    <block title="Payment Extension Settings: Retention Journals" name="l10n_ve_payment_extension_journal_block">
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_payment_extension_journal">
                            <div class="o_setting_right_pane">
                                <group string="IVA Retention Journals">
                                    <field name="iva_supplier_retention_journal_id" string="Supplier Journal"/>
                                    <field name="iva_customer_retention_journal_id" string="Customer Journal"/>
                                </group>
                                <group string="ISLR Retention Journals">
                                    <field name="islr_supplier_retention_journal_id" string="Supplier Journal"/>
                                    <field name="islr_customer_retention_journal_id" string="Customer Journal"/>
                                </group>
                                <group string="Municipal Retention Journals">
                                    <field name="municipal_supplier_retention_journal_id" string="Supplier Journal"/>
                                    <field name="municipal_customer_retention_journal_id" string="Customer Journal"/>
                                </group>
                                <group string="General Settings">
                                    <field name="code_visible" string="Show Code in Reports"/>
                                </group>
                            </div>
                        </div>
                    </block>
                    <block title="Payment Extension Settings: Other" name="l10n_ve_payment_extension_withholding_block">
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_payment_extension_withholding">
                            <div class="o_setting_right_pane">
                                <group string="Withholding Conditions">
                                    <field name="condition_withholding_id" string="Applicable Condition"/>
                                </group>
                            </div>
                        </div>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>