<odoo>
  <record id="l10n_ve_mail_tracking_value_audits" model="ir.ui.view">
    <field name="name">mail.tracking.value.audit.logs</field>
    <field name="model">mail.tracking.value</field>
    <field name="arch" type="xml">
      <tree string="Audit logs lines">
        <field name="model" />
        <field name="field" />
        <field name="author_id" />
        <field name="field_type" />
        <field name="new_value_char" />
        <field name="old_value_char" />
        <field name="new_value_datetime" />
        <field name="old_value_datetime" />
        <field name="new_value_float" />
        <field name="old_value_float" />
        <field name="new_value_integer" />
        <field name="old_value_integer" />
        <field name="new_value_text" />
        <field name="old_value_text" />
        <field name="new_value_monetary" />
        <field name="old_value_monetary" />
      </tree>
    </field>
  </record>

  <record id="l10n_ve_auditlog_lines_search" model="ir.ui.view">
    <field name="name">l10n_ve.mail.tracking.value.audits.search</field>
    <field name="model">mail.message</field>
    <field name="arch" type="xml">
      <search string="Audit logs Search">
        <filter name="model" domain="[]" context="{'group_by': 'model'}" />
        <filter name="date" domain="[]" context="{'group_by': 'date:day'}" />
        <filter name="author" domain="[]" context="{'group_by': 'author_id'}" />
      </search>
    </field>
  </record>

  <record model="ir.actions.act_window" id="l10n_ve_mail_tracking_value_audits_action">
    <field name="name">Audit logs lines</field>
    <field name="res_model">mail.tracking.value</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('model', 'in', ('account.move','account.payment','account.retention'))]</field>
  </record>
</odoo>
