<odoo>
    <data>
        <record id="view_res_config_settings_l10n_ve_invoice" model="ir.ui.view">
            <field name="name">res.config.settings.l10n.ve.invoice</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_ve_base.l10n_ve_base_view_res_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='l10n_ve_base']" position="inside">
                    <block title="Configuration Invoice: General" string="Invoice Configuration" name="l10n_ve_invoice_block">
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_invoice_div_show_total_on_usd_invoice">
                            <div class="o_setting_left_pane">
                                <field name="show_total_on_usd_invoice" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_total_on_usd_invoice" />
                                <div class="text-muted">
                                    Show Total USD on Free Form Invoice
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_invoice_div_show_tag_on_usd_invoice">
                            <div class="o_setting_left_pane">
                                <field name="show_tag_on_usd_invoice" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_tag_on_usd_invoice" />
                                <div class="text-muted">
                                    Show Tag USD on Free Form Invoice
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_invoice_div_group_sales_invoicing_series">
                            <div class="o_setting_left_pane">
                                <field name="group_sales_invoicing_series" class="oe_inline" required="1" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_sales_invoicing_series" />
                                <div class="text-muted">
                                    It allow enable the invoicing sequences by
                                    series in sale's journals.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_invoice_div_show_column_default_code_free_form">
                            <div class="o_setting_left_pane">
                                <field name="show_column_default_code_free_form" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_column_default_code_free_form" />
                                <div class="text-muted">
                                    Show Default Code on Free Form Invoice
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box" id="l10n_ve_invoice_div_max_product_invoice">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="max_product_invoice" class="oe_inline"/>
                                <div class="text-muted">
                                    Limit the number of lines that can be printed on a free form
                                    invoice
                                </div>
                                <field name="max_product_invoice" class="oe_inline"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 o_setting_box" id="l10n_ve_invoice_div_auto_select_debit_note_journal">
                        <div class="o_setting_left_pane">
                            <field name="auto_select_debit_note_journal" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_select_debit_note_journal" class="oe_inline"/>
                            <div class="text-muted">
                                <span>Assists the user in selecting the appropriate journals when applying a debit note.</span>
                            </div>
                        </div>
                        </div>
                         <div class="col-12 col-lg-6 o_setting_box" id="l10n_ve_invoice_div_auto_select_debit_note_journal">
                        <div class="o_setting_left_pane">
                            <field name="confirm_invoice_with_current_date" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="confirm_invoice_with_current_date" class="oe_inline"/>
                            <div class="text-muted">
                                <span>Assigns the current date when confirming the customer invoice.</span>
                            </div>
                        </div>
                        </div>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>