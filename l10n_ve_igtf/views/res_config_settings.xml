<odoo>
    <data>
        <record id="res_config_settings_l10n_ve_igtf" model="ir.ui.view">
            <field name="name">res.config.settings.l10n_ve_igtf</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_ve_tax.res_config_settings_l10n_ve_taxes"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='base_igtf_setting']" position="inside">
                    <br/>

                    <div class="o_setting_left_pane">
                        <field name="show_igtf_suggested_sale_order" />
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row">
                                <label for="show_igtf_suggested_sale_order" class="col-lg-12 o_light_label"/>
                                <div class="text-muted">
                                    Show suggestion of the igtf amount based on the total amount of the Order
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="o_setting_left_pane">
                        <field name="show_igtf_suggested_account_move"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row">
                                <label for="show_igtf_suggested_account_move" class="col-lg-12 o_light_label"/>
                                <div class="text-muted">
                                    Show suggestion of the igtf amount based on the total amount of the Invoice
                                </div>
                            </div>
                        </div>
                    </div>

                    <br/>

                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row">
                                <label for="igtf_percentage" class="col-lg-6 o_light_label"/>
                                <field name="igtf_percentage" />
                            </div>
                        </div>
                    </div>

                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row">
                                <label for="customer_account_igtf_id" class="col-lg-6 o_light_label"/>
                                <field name="customer_account_igtf_id"/>
                            </div>
                        </div>
                    </div>

                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row">
                                <label for="supplier_account_igtf_id" class="col-lg-6 o_light_label"/>
                                <field name="supplier_account_igtf_id"/>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
