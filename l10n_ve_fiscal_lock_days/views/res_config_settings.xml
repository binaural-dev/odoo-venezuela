<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_l10n_ve_fiscal_lock_days" model="ir.ui.view">
            <field name="name">res.config.settings.l10n.ve.fiscal.lock.days</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100" />
            <field name="inherit_id" ref="l10n_ve_rate.res_config_settings_l10n_ve_rate" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='l10n_ve_rate_settings']" position="after">
                    <h2>Fiscal Configuration</h2>
                    <div class="row mt16 o_settings_container"
                        name="l10n_ve_fiscal_lock_days_settings">

                        <div class="col-12 col-lg-6 o_setting_box" id="">
                            <div class="o_setting_right_pane">
                                <group colspan="2" col="4">
                                    <field name="tax_period" />
                                </group>
                                <div class="text-muted">
                                    Periocidad de los impuestos
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="">
                            <div class="o_setting_left_pane">
                                <field name="lock_date_tax_validation" />
                            </div>
                            <div class="o_setting_right_pane">
                                <group colspan="2" col="4">
                                    <label for="lock_date_tax_validation" />
                                </group>
                                <div class="text-muted">
                                    Validación período fiscal
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
