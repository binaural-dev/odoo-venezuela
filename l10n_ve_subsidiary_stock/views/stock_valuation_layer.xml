
<odoo>

    <record id="view_inventory_valuation_search" model="ir.ui.view">
        <field name="name">l10n.ve.subsidiary.stock.valuation.layer.search</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
        <field name="arch" type="xml">
	    <field name="product_tmpl_id" position="after">
		<field name="subsidiary_id"/>
	    </field>
	    <filter name="outgoing" position="after">
		<filter name="subsidiary_dest" string="Has Subsidiary" domain="[('subsidiary_id', '!=', False)]"/>
	    </filter>
	    <group position="inside">
		<filter string="Subsidiary" name="subsidiary_id" domain="[]" context="{'group_by': 'subsidiary_id'}"/>
	    </group>
        </field>
    </record>

    <record id="stock_valuation_layer_tree" model="ir.ui.view">
        <field name="name">l10n.ve.subsidiary.stock.valuation.layer.tree</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
	    <field name="create_date" position="after">
		<field name="subsidiary_id"/>
	    </field>
        </field>
    </record>

</odoo>
