
<odoo>
    <data>
        <record id="view_account_payment_search" model="ir.ui.view">
            <field name="name">account.payment.view.search.l10n.ve.subsidiary</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="account_analytic_id"/>
                </field>
                <filter name="transfers_filter" position="after">
                <filter string="Sucursal" name="analytic_account_filter" domain="[('account_analytic_id', '!=', False)]"/>
                </filter>
                <filter name="company" position="after">
                    <filter string="Sucursal" name="analytic_account" domain="[]" context="{'group_by': 'account_analytic_id'}"/>
                </filter>
            </field>
        </record>

        <record id="account_payment_view_form" model="ir.ui.view">
            <field name="name">account.payment.view.form.l10n.ve.subsidiary</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="is_internal_transfer" position="after">
                    <field name="company_subsidiary" invisible='1'/>   
                    <field name="account_analytic_id"
                        invisible="not company_subsidiary"
                        readonly="state != 'draft'"
                        required="company_subsidiary"/>
                </field>
            </field>
        </record>

        <record id="view_account_payment_tree" model="ir.ui.view">
            <field name="name">account.payment.view.tree.l10n.ve.subsidiary</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="account_analytic_id" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
