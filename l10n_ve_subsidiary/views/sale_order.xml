
<odoo>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">l10n.ve.subsidiary.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="company_subsidiary" invisible='1'/>   
                <field name="subsidiary_id" 
                    invisible="not company_subsidiary"
                    readonly="state != 'draft'"
                    required="company_subsidiary"/>
            </field>
        </field>
    </record>

    <record id="sale_order_view_search_inherit_quotation_inherit_l10n_ve_subsidiary" model="ir.ui.view">
        <field name="name">sale.order.view.search.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <search>
                <field name="subsidiary_id" string="Sucursal"/>
                <group string="Group by">
                    <filter name="subsidiary_id" string="Sucursal" context="{'group_by': 'subsidiary_id'}"/>
                </group>
                <filter name="subsidiary_id" string="Sucursal" domain="[('subsidiary_id', '!=' , False)]"/>
            </search>
        </field>
    </record>
</odoo>
